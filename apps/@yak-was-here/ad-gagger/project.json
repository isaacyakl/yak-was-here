{
    "name": "@yak-was-here/ad-gagger",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/@yak-was-here/ad-gagger/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "platform": "node",
                "outputPath": "dist/apps/@yak-was-here/ad-gagger",
                "bundle": false,
                "main": "apps/@yak-was-here/ad-gagger/src/content.ts",
                "tsConfig": "apps/@yak-was-here/ad-gagger/tsconfig.app.json",
                "assets": [
                    {
                        "input": "apps/@yak-was-here/ad-gagger/src/",
                        "glob": "*.html",
                        "output": "./"
                    },
                    {
                        "input": "apps/@yak-was-here/ad-gagger/src/",
                        "glob": "*.json",
                        "output": "./"
                    },
                    {
                        "input": "apps/@yak-was-here/ad-gagger/src/assets/images",
                        "glob": "*.png",
                        "output": "images/"
                    }
                ],
                "generatePackageJson": false,
                "esbuildOptions": {
                    "sourcemap": false,
                    "outExtension": {
                        ".js": ".js"
                    }
                }
            },
            "inputs": [
                "{projectRoot}/src/*.ts",
                "{projectRoot}/src/*.html",
                "{projectRoot}/src/*.json"
            ],
            "configurations": {
                "development": {},
                "production": {
                    "minify": true,
                    "esbuildOptions": {
                        "sourcemap": false,
                        "outExtension": {
                            ".js": ".js"
                        }
                    }
                }
            }
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "dependsOn": ["build"],
            "options": {
                "buildTarget": "@yak-was-here/ad-gagger:build",
                "runBuildTargetDependencies": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "@yak-was-here/ad-gagger:build:development"
                },
                "production": {
                    "buildTarget": "@yak-was-here/ad-gagger:build:production"
                }
            }
        },
        "test": {
            "options": {
                "passWithNoTests": true
            }
        }
    }
}
