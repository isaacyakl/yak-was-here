{
    "name": "@yak-was-here/ad-gagger",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/@yak-was-here/ad-gagger/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "wxt",
                "cwd": "apps/@yak-was-here/ad-gagger"
            }
        },
        "dev:firefox": {
            "executor": "nx:run-commands",
            "options": {
                "command": "wxt -b firefox",
                "cwd": "apps/@yak-was-here/ad-gagger"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "outputs": ["{projectRoot}/.output"],
            "options": {
                "command": "wxt build",
                "cwd": "apps/@yak-was-here/ad-gagger"
            }
        },
        "build:firefox": {
            "executor": "nx:run-commands",
            "outputs": ["{projectRoot}/.output"],
            "options": {
                "command": "wxt build -b firefox",
                "cwd": "apps/@yak-was-here/ad-gagger"
            }
        },
        "zip": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "wxt zip",
                "cwd": "apps/@yak-was-here/ad-gagger"
            }
        },
        "zip:firefox": {
            "executor": "nx:run-commands",
            "dependsOn": ["build:firefox"],
            "options": {
                "command": "wxt zip -b firefox",
                "cwd": "apps/@yak-was-here/ad-gagger"
            }
        },
        "postinstall": {
            "executor": "nx:run-commands",
            "options": {
                "command": "wxt prepare",
                "cwd": "apps/@yak-was-here/ad-gagger"
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/@yak-was-here/ad-gagger/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "coverage": true
                }
            }
        }
    }
}
