{
    "name": "@yak-was-here/ad-gagger",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/@yak-was-here/ad-gagger/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "platform": "browser",
                "outputPath": "dist/apps/@yak-was-here/ad-gagger",
                "bundle": true,
                "format": ["esm"],
                "main": "apps/@yak-was-here/ad-gagger/src/content.ts",
                "additionalEntryPoints": [
                    "apps/@yak-was-here/ad-gagger/src/content.ts",
                    "apps/@yak-was-here/ad-gagger/src/background.ts",
                    "apps/@yak-was-here/ad-gagger/src/popup.ts"
                ],
                "tsConfig": "apps/@yak-was-here/ad-gagger/tsconfig.app.json",
                "assets": [
                    {
                        "input": "apps/@yak-was-here/ad-gagger/src/assets/",
                        "glob": "*.{html,css}",
                        "output": "./"
                    },
                    {
                        "input": "apps/@yak-was-here/ad-gagger/src/assets/",
                        "glob": "*.json",
                        "output": "./"
                    },
                    {
                        "input": "apps/@yak-was-here/ad-gagger/src/assets/images/",
                        "glob": "*.png",
                        "output": "images/"
                    }
                ],
                "generatePackageJson": false,
                "esbuildOptions": {
                    "sourcemap": false,
                    "outExtension": {
                        ".js": ".js"
                    }
                }
            },
            "inputs": [
                "{projectRoot}/src/*.ts",
                "{projectRoot}/src/assets/*.html",
                "{projectRoot}/src/assets/*.json",
                "{projectRoot}/src/assets/images/*.png"
            ],
            "configurations": {
                "development": {},
                "production": {
                    "minify": true,
                    "esbuildOptions": {
                        "sourcemap": false,
                        "outExtension": {
                            ".js": ".js"
                        }
                    }
                }
            }
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "dependsOn": ["build"],
            "options": {
                "buildTarget": "@yak-was-here/ad-gagger:build",
                "runBuildTargetDependencies": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "@yak-was-here/ad-gagger:build:development"
                },
                "production": {
                    "buildTarget": "@yak-was-here/ad-gagger:build:production"
                }
            }
        },
        "test": {
            "options": {
                "passWithNoTests": true
            }
        },
        "copy-to-windows": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cp -r dist/apps/@yak-was-here/ad-gagger /mnt/c/temp/ad-gagger-extension"
            },
            "dependsOn": ["build"]
        },
        "launch-in-windows": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "mkdir -p /mnt/c/temp",
                    "cp -r dist/apps/@yak-was-here/ad-gagger /mnt/c/temp/ad-gagger-extension",
                    "powershell.exe -Command \"Start-Process 'C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe' -ArgumentList '--load-extension=C:\\temp\\ad-gagger-extension', '--new-window', '--user-data-dir=C:\\temp\\.chrome-dev-profile'\""
                ],
                "parallel": false
            },
            "dependsOn": ["build"]
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "npx nx build @yak-was-here/ad-gagger --watch",
                    "npx nx copy-to-windows @yak-was-here/ad-gagger --watch"
                ],
                "parallel": true
            }
        }
    }
}
