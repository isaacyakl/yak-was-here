{
    "manifest_version": 3,
    "name": "Ad Gagger - Ad Muter and Skipper",
    "description": "Automatically mute ads on websites such as YouTube, Twitch, and more.",
    "version": "1.0",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.twitch.tv/*", "https://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    }
}
