{
    "manifest_version": 3,
    "name": "Ad Gagger",
    "description": "Automatically mute and skip ads on YouTube, Twitch, and any custom websites you configure.",
    "version": "1.0",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.twitch.tv/*", "https://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    }
}
