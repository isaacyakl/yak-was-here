{
    "manifest_version": 3,
    "name": "Ad Gagger - Ad Muter",
    "description": "Automatically mute ads on websites such as YouTube, Twitch, and more.",
    "version": "1.0",
    "permissions": ["tabs","activeTab","scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.twitch.tv/*",
                "https://www.youtube.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "settings.html",
        "default_icon": "images/icon.png"
    }
}
